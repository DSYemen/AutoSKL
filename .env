# إعدادات التطبيق الأساسية
APP_NAME="AutoML Framework"
APP_VERSION="2.0.0"
APP_DEBUG=false
APP_HOST="0.0.0.0"
APP_PORT=8000
SECRET_KEY="your-super-secure-secret-key-here"  # يجب تغييره في الإنتاج

# إعدادات قاعدة البيانات
DATABASE_URL="sqlite:///./ml_framework.db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=1800

# إعدادات Redis
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""  # يجب تعيينه في الإنتاج
REDIS_SSL=false
REDIS_ENCODING="utf-8"

# إعدادات البريد الإلكتروني
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
EMAIL_SENDER="your-email@example.com"
EMAIL_PASSWORD=""  # يجب تعيينه في الإنتاج
EMAIL_USE_TLS=true
EMAIL_TIMEOUT=60

# إعدادات التسجيل
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE="logs/app.log"
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_JSON_FORMAT=true

# إعدادات الأمان
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# إعدادات المراقبة
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
HEALTH_CHECK_INTERVAL=60

# إعدادات التخزين المؤقت
CACHE_TYPE="redis"
CACHE_DEFAULT_TTL=3600
CACHE_KEY_PREFIX="mlf:"
CACHE_COMPRESSION=true
CACHE_MAX_MEMORY="1gb"

# إعدادات التخزين
STORAGE_TYPE="local"
MODELS_DIR="models"
REPORTS_DIR="reports"
TEMP_DIR="temp"
BACKUP_DIR="backups"
MAX_FILE_SIZE=104857600  # 100MB

# إعدادات التقارير
REPORT_FORMAT="pdf"
PLOT_THEME="plotly_dark"
PLOT_WIDTH=800
PLOT_HEIGHT=600
PLOT_INTERACTIVE=true

# إعدادات النموذج
MODEL_SELECTION_CV_FOLDS=5
MODEL_SELECTION_N_TRIALS=200
MODEL_SELECTION_TIMEOUT=3600
MODEL_TRAINING_TEST_SIZE=0.2
MODEL_TRAINING_RANDOM_STATE=42
MODEL_MONITORING_CHECK_INTERVAL=3600
MODEL_DRIFT_THRESHOLD=0.05

# إعدادات Celery
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"
CELERY_TASK_SERIALIZER="json"
CELERY_RESULT_SERIALIZER="json"